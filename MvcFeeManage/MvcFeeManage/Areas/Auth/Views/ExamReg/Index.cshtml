@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
}

<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Date
        </th>
        <th>
           Name
        </th>
        <th>
           Passport No.
        </th>
        @*<th>
            D.O.B
        </th>*@
        <th>
            D.O.E
        </th>
        <th>
            DOE 1st Choice
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.choice2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.choice3)
        </th>*@
        <th>
            Module
        </th>
        <th>
            Venue 1
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.v2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.v3)
        </th>*@
